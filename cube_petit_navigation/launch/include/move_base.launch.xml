<launch>

  <arg name="robot"/>
  <!-- set topics -->
  <arg name="map_topic" default="map" />
  <arg name="cmd_vel_topic" default="/cube_petit/diff_drive_controller/cmd_vel" />
  <arg name="odom_topic" default="odom" />
	<arg name="rotate" default="true"/>

  <!-- launch costmap_to_image node -->
  <arg name="costmap_image" default="false" />

  <!-- planners, costmaps, etc -->
  <node pkg="move_base" type="move_base" name="move_base" respawn="true" output="screen">
    <rosparam file="$(find cube_petit_navigation)/config/navigation/costmap_common.yaml" command="load" ns="global_costmap" />
	  <rosparam file="$(find cube_petit_navigation)/config/navigation/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find cube_petit_navigation)/config/navigation/costmap_local.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find cube_petit_navigation)/config/navigation/costmap_global.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find cube_petit_navigation)/config/navigation/move_base.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="map" to="$(arg map_topic)" />
  </node>

  <!-- costmap convert to image node -->
  <group if="$(arg costmap_image)">
  <param name="costmap_image/full/compressed/format" value="png" />
  <node name="costmap_to_image" pkg="hector_compressed_map_transport" type="costmap_to_image_node" output="screen">
		<remap from="pose" to="robot_pose" />
  </node>
  </group>

</launch>
